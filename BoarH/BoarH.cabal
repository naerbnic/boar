name:           BoarH
version:        0.1
cabal-version:  >=1.2
build-type:     Simple
author:         brianchin

executable BoarH
  hs-source-dirs:  src
  main-is:         Main.hs
  build-depends:   
                   base >= 4,
                   containers >=0.5.0 && <0.6
  ghc-options:     -Wall
  other-modules:   
                   Grammar,
                   MultiMap,
                   ProdState,
                   Fixpoint,
                   Graph,
                   Parser.Earley,
                   ParseState

test-suite GraphTest
  type:            exitcode-stdio-1.0
  main-is:         TestMain.hs
  ghc-options:     -Wall -rtsopts
  build-depends:   
                   base >= 4, HTF > 0.9,
                   QuickCheck >=2.6 && <2.7
  other-modules:   
                  Graph,
                  GraphTest,
                  TestMain,
                  Test.Graph,
                  Parser.Earley,
                  ParseState
  hs-source-dirs:  
                  test,
                  src 

